<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <button><a href="/users">Back</a></button>

        <h1>Edit Appointment</h1>
        <form action="/appointment-edit/<%= appointment.id %>" method="POST">
            <label for="fullName">Full Name:</label>
            <input type="text" id="fullName" name="fullName" value="<%= appointment.fullName %>" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= appointment.email %>" required>

            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="<%= appointment.phoneNumber %>" required>

            <button type="submit">Save Changes</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
